<Window x:Class="IKuaiDeviceMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="爱快设备监控" Height="600" Width="900"
        StateChanged="Window_StateChanged" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="爱快设备监控" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               VerticalAlignment="Center" />
                    <TextBlock x:Name="StatusText" Text="● 已连接" Foreground="LightGreen" FontSize="14" Margin="15,0,0,0"
                               VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ThemeButton" Content="🌙" Click="Theme_Click" Margin="0,0,10,0" ToolTip="切换主题" />
                    <Button Content="刷新" Click="Refresh_Click" Margin="0,0,10,0" />
                    <Button Content="设置" Click="Settings_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <ListView x:Name="DeviceList" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="状态" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Ellipse Width="12" Height="12" Fill="LightGreen" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="主机名" DisplayMemberBinding="{Binding Hostname}" Width="150" />
                    <GridViewColumn Header="IP地址" DisplayMemberBinding="{Binding IpAddr}" Width="120" />
                    <GridViewColumn Header="MAC地址" DisplayMemberBinding="{Binding Mac}" Width="140" />
                    <GridViewColumn Header="设备类型" DisplayMemberBinding="{Binding ClientType}" Width="100" />
                    <GridViewColumn Header="设备厂商" DisplayMemberBinding="{Binding ClientDevice}" Width="100" />
                    <GridViewColumn Header="上线时间" DisplayMemberBinding="{Binding Uptime}" Width="150" />
                </GridView>
            </ListView.View>
        </ListView>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="DeviceCountText" Text="设备数: 0" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock x:Name="LastUpdateText" Text="最后更新: --" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>